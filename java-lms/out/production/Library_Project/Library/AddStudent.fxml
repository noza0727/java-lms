<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Library.AddStudentController">
    <children>
        <Label layoutX="184.0" layoutY="28.0" text="Add Student" textFill="#835858">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
        <VBox layoutX="98.0" layoutY="72.0" prefHeight="247.0" prefWidth="283.0" spacing="7.0">
            <children>
                <TextField fx:id="student_ID_add" prefHeight="37.0" prefWidth="300.0" promptText="ID" />
                <TextField fx:id="student_Fname_add" prefHeight="37.0" prefWidth="300.0" promptText="First Name" />
                <TextField fx:id="student_Lname_add" prefHeight="37.0" prefWidth="300.0" promptText="Last Name" />
            <ComboBox fx:id="yearcombo" prefHeight="32.0" prefWidth="283.0" promptText="Year" />
            <ComboBox fx:id="depcombo" prefHeight="32.0" prefWidth="283.0" promptText="Department" />
                <PasswordField fx:id="student_pass_add" prefHeight="37.0" prefWidth="300.0" promptText="Password" />
            </children>
        </VBox>
        <HBox alignment="CENTER" layoutX="66.0" layoutY="327.0" prefHeight="48.0" prefWidth="352.0" spacing="50.0">
            <children>
                <Button mnemonicParsing="false" onAction="#clearAdd" prefHeight="32.0" prefWidth="81.0" text="Clear" textFill="#835858">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#handleCloseButton" prefHeight="32.0" prefWidth="81.0" text="Cancel" textFill="#835858">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#addStudent" prefHeight="32.0" prefWidth="81.0" text="Add" textFill="#835858">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
        </HBox>
        <Button fx:id="closeButton" layoutX="453.0" mnemonicParsing="false" onAction="#handleCloseButton" prefHeight="28.0" prefWidth="30.0" text="X" textFill="#835858">
            <font>
                <Font name="System Bold" size="12.0" />
            </font></Button>
    </children>
</AnchorPane>
