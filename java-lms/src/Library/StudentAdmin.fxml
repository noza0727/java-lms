<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Library.StudentsTable">
    <children>
        <VBox alignment="BOTTOM_CENTER" layoutX="543.0" layoutY="150.0" prefHeight="143.0" prefWidth="98.0" spacing="15.0">
            <children>
                <ToggleButton fx:id="add_student" mnemonicParsing="false" prefHeight="35.0" prefWidth="85.0" text="Add" textFill="#835858">
                    <font>
                        <Font size="15.0" />
                    </font>
                    <toggleGroup>
                        <ToggleGroup fx:id="operation" />
                    </toggleGroup>
                </ToggleButton>
                <ToggleButton fx:id="modify_student" layoutX="21.0" layoutY="121.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="85.0" text="Edit" textFill="#835858" toggleGroup="$operation">
                    <font>
                        <Font size="15.0" />
                    </font>
                </ToggleButton>

                <ToggleButton layoutX="21.0" layoutY="201.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="85.0" text="Delete" textFill="#835858" toggleGroup="$operation">
                    <font>
                        <Font size="15.0" />
                    </font>
                </ToggleButton>
            </children>
        </VBox>
        <TableView fx:id="tableStudent" layoutY="109.0" prefHeight="240.0" prefWidth="544.0">
            <columns>
                <TableColumn fx:id="col_id_student" prefWidth="78.0" text="ID" />
                <TableColumn fx:id="col_fname_student" prefWidth="128.0" text="First Name" />
                <TableColumn fx:id="col_lname_student" prefWidth="142.0" text="Last Name" />
                <TableColumn fx:id="col_year_student" prefWidth="78.0" text="Year" />
                <TableColumn fx:id="col_department" prefWidth="73.0" text="Department" />
                <TableColumn fx:id="col_select_student" prefWidth="44.0" text="Select" />
            </columns>
        </TableView>
        <HBox alignment="CENTER" layoutY="55.0" prefHeight="31.0" prefWidth="507.0" spacing="15.0">
            <children>
                <TextField prefHeight="25.0" prefWidth="400.0" />
                <Button fx:id="searchStudent" mnemonicParsing="false" prefHeight="25.0" prefWidth="61.0" text="Search" />
            </children>
        </HBox>
    </children>
</AnchorPane>
