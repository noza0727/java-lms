<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Library.TableBooks">
    <children>
        <TableView fx:id="table" editable="true" layoutY="100.0" prefHeight="200.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="coltitle" onEditCommit="#editTitle" prefWidth="140.0" text="Title" />
                <TableColumn fx:id="colauthor" onEditCommit="#editAuthor" prefWidth="104.0" text="Author" />
                <TableColumn fx:id="colyear" onEditCommit="#editYearPublish" prefWidth="89.0" text="Publish Year" />
                <TableColumn fx:id="colgenre" onEditCommit="#editGenre" prefWidth="83.0" text="Genre" />
                <TableColumn fx:id="colid" onEditCommit="#editIsbn" prefWidth="106.0" text="ISBN" />
                <TableColumn fx:id="colstatus" onEditCommit="#editAvailable" prefWidth="77.0" text="Available" />
            </columns>
        </TableView>
        <HBox alignment="CENTER" layoutX="47.0" layoutY="56.0" prefHeight="31.0" prefWidth="507.0" spacing="15.0">
            <children>
                <TextField fx:id="searchField" prefHeight="25.0" prefWidth="400.0" promptText="Search" />
            </children>
        </HBox>
      <HBox alignment="CENTER" layoutX="198.0" layoutY="330.0" prefHeight="35.0" prefWidth="206.0" spacing="30.0">
         <children>
                <ToggleButton mnemonicParsing="false" onAction="#addBook" prefHeight="35.0" prefWidth="85.0" text="Add" textFill="#835858">
                    <font>
                        <Font size="15.0" />
                    </font>
               <toggleGroup>
                        <ToggleGroup fx:id="operation" />
               </toggleGroup>
                </ToggleButton>

                <ToggleButton fx:id="delete_book_lib" mnemonicParsing="false" onAction="#deleteBook" prefHeight="35.0" prefWidth="85.0" text="Delete" textFill="#835858" toggleGroup="$operation">
                    <font>
                        <Font size="15.0" />
                    </font>
                </ToggleButton>
         </children>
      </HBox>
    </children>

</AnchorPane>
