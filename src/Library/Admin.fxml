<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: e5dfdf;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Library.AdminController">
    <children>
        <Button fx:id="closeButton" layoutX="700.0" mnemonicParsing="false" onAction="#handleCloseButton" prefHeight="28.0" prefWidth="30.0" style="-fx-background-color: lightGrey;" text="X" textFill="#835858">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
        <HBox fx:id="user_box" alignment="CENTER" layoutX="203.0" layoutY="35.0" prefHeight="60.0" prefWidth="406.0" spacing="10.0">
            <children>
            <ToggleButton fx:id="btn_lib" mnemonicParsing="false" onAction="#userHandler" prefHeight="35.0" prefWidth="150.0" text="Librarian" textFill="#835858">
               <toggleGroup>
                  <ToggleGroup fx:id="usersGroup" />
               </toggleGroup></ToggleButton>
                <ToggleButton fx:id="btn_student" mnemonicParsing="false" onAction="#userHandler" prefHeight="35.0" prefWidth="150.0" text="Students" textFill="#835858" toggleGroup="$usersGroup">
                    <font>
                        <Font name="Calibri Light" size="15.0" />
                    </font>
                </ToggleButton>
                <ToggleButton fx:id="btn_book" mnemonicParsing="false" onAction="#userHandler" prefHeight="35.0" prefWidth="150.0" text="Books" textFill="#835858" toggleGroup="$usersGroup">
                    <font>
                        <Font name="Calibri Light" size="15.0" />
                    </font>
                </ToggleButton>
            </children>
        </HBox>
        <VBox alignment="BOTTOM_CENTER" layoutY="81.0" prefHeight="416.0" prefWidth="146.0" spacing="15.0" GridPane.columnIndex="2">
            <children>
            <ToggleButton fx:id="view_lib" mnemonicParsing="false" onAction="#optionHandler" prefHeight="65.0" prefWidth="125.0" text="View" textFill="#835858">
               <font>
                  <Font size="15.0" />
               </font>
               <toggleGroup>
                  <ToggleGroup fx:id="operation" />
               </toggleGroup>
            </ToggleButton>
            <ToggleButton fx:id="add_lib" mnemonicParsing="false" onAction="#optionHandler" prefHeight="65.0" prefWidth="125.0" text="Add" textFill="#835858" toggleGroup="$operation">
               <font>
                  <Font size="15.0" />
               </font>
            </ToggleButton>
            <ToggleButton fx:id="modify_lib" layoutX="21.0" layoutY="121.0" mnemonicParsing="false" onAction="#optionHandler" prefHeight="65.0" prefWidth="125.0" text="Modify" textFill="#835858" toggleGroup="$operation">
               <font>
                  <Font size="15.0" />
               </font>
            </ToggleButton>

            <ToggleButton fx:id="delete_lib" layoutX="21.0" layoutY="201.0" mnemonicParsing="false" onAction="#optionHandler" prefHeight="65.0" prefWidth="125.0" text="Delete" textFill="#835858" toggleGroup="$operation">
               <font>
                  <Font size="15.0" />
               </font>
            </ToggleButton>
            <ToggleButton fx:id="logOut_admin" layoutX="21.0" layoutY="321.0" mnemonicParsing="false" onAction="#optionHandler" prefHeight="65.0" prefWidth="125.0" text="Sign Out" textFill="#835858" toggleGroup="$operation">
               <font>
                  <Font size="15.0" />
               </font>
            </ToggleButton>
            </children></VBox>
        <Label alignment="CENTER" layoutX="12.0" layoutY="28.0" prefHeight="49.0" prefWidth="122.0" text="Admin" textFill="#835858">
            <font>
                <Font size="28.0" />
            </font>
        </Label>
      <AnchorPane fx:id="anchorPane" layoutX="146.0" layoutY="95.0" prefHeight="393.0" prefWidth="573.0" />

     
    </children>
</AnchorPane>
