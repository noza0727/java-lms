<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Library.Controller">
   <children>
      <Button layoutX="578.0" layoutY="2.0" mnemonicParsing="false" onAction="#handleCloseButton" text="X" textFill="#835858">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <Label alignment="CENTER" layoutX="206.0" layoutY="55.0" prefHeight="46.0" prefWidth="180.0" text="Registration" textFill="#835858">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <TextField fx:id="fname_reg" layoutX="76.0" layoutY="151.0" prefHeight="35.0" prefWidth="230.0" promptText="First Name" />
      <TextField fx:id="lname_reg" layoutX="76.0" layoutY="200.0" prefHeight="35.0" prefWidth="230.0" promptText="Last Name" />
      <PasswordField fx:id="pass_reg" layoutX="76.0" layoutY="252.0" prefHeight="35.0" prefWidth="230.0" promptText="Password" />
      <ComboBox fx:id="course_combo_reg" layoutX="358.0" layoutY="200.0" prefHeight="35.0" prefWidth="180.0" promptText="Course" />
      <Button fx:id="btn_register" layoutX="418.0" layoutY="335.0" mnemonicParsing="false" onAction="#registerControl" prefHeight="30.0" prefWidth="100.0" text="Register">
         <font>
            <Font name="Calibri Light" size="15.0" />
         </font>
      </Button>
      <Button layoutX="276.0" layoutY="335.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Cancel" />
      <HBox alignment="CENTER" layoutX="358.0" layoutY="151.0" prefHeight="35.0" prefWidth="180.0" spacing="50.0">
         <children>
            <RadioButton maxWidth="100.0" mnemonicParsing="false" text="Male">
               <toggleGroup>
                  <ToggleGroup fx:id="gender" />
               </toggleGroup>
            </RadioButton>
            <RadioButton maxWidth="100.0" mnemonicParsing="false" text="Female" toggleGroup="$gender" />
         </children>
      </HBox>
   </children>
</AnchorPane>
